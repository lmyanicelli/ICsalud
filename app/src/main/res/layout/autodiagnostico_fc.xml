<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_weight="0.3"
                android:gravity="center_horizontal|center"
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center_horizontal|center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView_PS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PS"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_PS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Presión Sistólica"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView_mmHg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center_horizontal|center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView_PD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_PD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Presión Diastólica"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView_mmHg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center_horizontal|center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView_FC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FC"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_FC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Frecuencia Cardíaca"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView_lat_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lat/min"
                    android:textSize="18sp" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText_FC"
                    android:layout_weight="1"
                    android:text="@string/cancelar"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/btn_cancel"
                    android:layout_alignBottom="@+id/btn_cancel"
                    android:layout_alignEnd="@+id/textView_mmHg2"
                    android:layout_alignRight="@+id/textView_mmHg2"
                    android:layout_weight="1"
                    android:text="@string/guardar"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>